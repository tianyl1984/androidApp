<?xml version="1.0" encoding="utf-8"?>
<shape 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="oval">
    <!-- 渐变色 -->
    <gradient
        android:angle="0" 
        android:centerX="0.0" 
        android:centerY="0.5" 
        android:centerColor="#000000" 
        android:endColor="#ffffff" 
        android:startColor="#554466"
        android:type="linear"
        />
    <!-- 间距 -->
    <padding 
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"
        />
    <!-- 圆角 -->
    <corners
        android:radius="2dp"
    />
</shape>